<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inteligenty_zamek.app_ik.RegisterActivity">


    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:text="@string/activity_register_text1" />

    <EditText
        android:id="@+id/editText_Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView1"
        android:layout_alignStart="@+id/TextView1"
        android:layout_below="@+id/TextView1"
        android:layout_marginRight="10dp"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Login"
        android:layout_alignStart="@+id/editText_Login"
        android:layout_below="@+id/editText_Login"
        android:layout_marginTop="23dp"
        android:text="@string/activity_register_text2" />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="10dp"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Password"
        android:layout_alignStart="@+id/editText_Password"
        android:layout_below="@+id/editText_Password"
        android:layout_marginTop="21dp"
        android:text="@string/activity_register_text3" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginRight="10dp"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextName"
        android:layout_alignStart="@+id/editTextName"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="19dp"
        android:text="@string/activity_register_text4" />

    <EditText
        android:id="@+id/ipserwertextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:layout_above="@+id/button_Register"
        android:layout_alignStart="@+id/editTextSurname"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="10dp"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TextView1"
        android:layout_marginTop="12dp"
        android:text="@string/activity_register_text5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_register_text6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:id="@+id/loginerrortextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_Login"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/warning_ico1"
        android:text="Login jest już zajęty"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/passworderrortextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_Password"
        android:layout_alignStart="@+id/loginerrortextview"
        android:text="Hasło niepoprawne"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/warning_ico1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_Login"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="&#xf071;"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/warning_ico2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf071;"
        android:layout_above="@+id/editText_Password"
        android:layout_alignStart="@+id/warning_ico1"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/eye_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf06e;"
        android:layout_alignBaseline="@+id/editText_Password"
        android:layout_alignBottom="@+id/editText_Password"
        android:layout_toEndOf="@+id/editText_Password" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ipserwertextview"
        android:layout_alignStart="@+id/button_Register"
        android:text="adres serwera" />

</android.widget.RelativeLayout>
