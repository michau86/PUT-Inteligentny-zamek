<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/mainListLinearLayout"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/color_background_list"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/TextView_listNameKey"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            style="@style/_textViewMediumstyle"
             />

        <TextView
            android:id="@+id/TextView_listPlaceKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/_textViewSmallstyle"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/icoKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>


