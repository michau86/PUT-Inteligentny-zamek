<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/color_background_list"
    >

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/_textViewMediumstyle" />

    <TextView
        android:id="@+id/listDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/_textViewSmallstyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/listAcceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/userWaitKeyList_text1"
            style="@style/_buttonStyle"/>

        <Button
            android:id="@+id/listDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            style="@style/_buttonStyle"
            android:text="@string/userWaitKeyList_text2" />
    </LinearLayout>


</LinearLayout>