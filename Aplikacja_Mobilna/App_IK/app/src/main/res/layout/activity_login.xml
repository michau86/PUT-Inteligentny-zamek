<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context="inteligenty_zamek.app_ik.Views.LoginActivity">

        <TextView
            android:id="@+id/loginTextViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_text1"
            style="@style/_textViewMediumstyle"
            />


    <EditText
        android:id="@+id/loginEditTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:layout_marginTop="15dp"
        style="@style/_textViewMediumstyle"
        android:id="@+id/loginTextViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text2" />

    <EditText

        android:id="@+id/loginEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/loginTextViewWarningIco"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:text="@string/activity_login_text7"
                android:visibility="invisible"
                style="@style/_textViewErrorStyle"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/loginTextViewErrorText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/activity_login_text8"
                android:visibility="invisible"
                android:layout_marginStart="5dp"
                style="@style/_textViewErrorStyle"
                android:padding="5dp"

                />
        </LinearLayout>

    <Button
        android:id="@+id/loginButtonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text3"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/loginTextViewDescribe"
        style="@style/_textViewMediumstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text4"
        android:layout_marginTop="25dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
    <Button
        android:id="@+id/loginButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text5"
        />

   <Button
        android:id="@+id/loginButtonGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text6"
        android:layout_marginStart="10dp"
        />



    </LinearLayout>



        <TextView
            android:id="@+id/loginTextViewSerwerText"
            style="@style/_textViewMediumstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_text9"
            android:layout_marginTop="50dp"
            />

        <EditText
            android:id="@+id/loginEditTextIpSerwer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



</LinearLayout>

</ScrollView>

