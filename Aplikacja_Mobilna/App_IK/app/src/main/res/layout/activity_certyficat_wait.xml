<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/certificatWaittextView2"
            style="@style/_textViewBigstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/activity_certificat_wait_text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="103dp"
            tools:layout_conversion_absoluteWidth="360dp" />


        <EditText
            android:id="@+id/certificatWaitEditText"
            style="@style/_editTextStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:hint="@string/activity_certificat_wait_text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/certificatWaittextView2"
            tools:layout_conversion_absoluteHeight="41dp"
            tools:layout_conversion_absoluteWidth="250dp" />


        <TextView
            android:id="@+id/certificatWaitkTextView"
            style="@style/_textViewMediumstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="256dp"
            android:layout_marginTop="24dp"
            android:text="@string/activity_certificat_wait_text3"
            app:layout_constraintStart_toStartOf="@+id/certificatWaitEditText"
            app:layout_constraintTop_toBottomOf="@+id/certificatWaittextView2"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="49dp" />

        <TextView
            android:id="@+id/certificatWaitTextViewSortingIco"
            style="@style/_textViewMediumstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="26dp"
            android:text="@string/icon_SortingAsc"
            app:layout_constraintStart_toEndOf="@+id/certificatWaitkTextView"
            app:layout_constraintTop_toBottomOf="@+id/certificatWaittextView2"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="17dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/certificatWaitRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/certificatWaittextView2"
            tools:layout_conversion_absoluteHeight="306dp"
            tools:layout_conversion_absoluteWidth="360dp" />


    </android.support.constraint.ConstraintLayout>




    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />


</android.support.v4.widget.DrawerLayout>