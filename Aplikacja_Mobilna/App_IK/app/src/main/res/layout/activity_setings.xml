<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:gravity="center"

    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_settings1"
        style="@style/_textViewBigstyle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_settings2"
        style="@style/_textViewMediumstyle"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/settingsEditTextPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/settingsTextViewSeeIcoOldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_text9"
            style="@style/_textViewicStyle"
            android:layout_alignTop="@+id/settingsEditTextPassword"
            android:layout_alignBottom="@+id/settingsEditTextPassword"
            android:layout_alignRight="@+id/settingsEditTextPassword"
            android:paddingRight="5dp"
            />


    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/activity_settings3"
        style="@style/_textViewMediumstyle"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/settingsEditTextNewPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

        <TextView
            android:id="@+id/settingsTextViewSeeIcoNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_register_text9"
            style="@style/_textViewicStyle"
            android:layout_alignTop="@+id/settingsEditTextNewPassword"
            android:layout_alignBottom="@+id/settingsEditTextNewPassword"
            android:layout_alignRight="@+id/settingsEditTextNewPassword"
            android:paddingRight="5dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/settingsButtonChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings4"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_border_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/_textViewBigstyle"
        android:text="@string/activity_settings5"
        />


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings6"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow1"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings7"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow2"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings8"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow3"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
            android:layout_column="1"
            android:text="@string/activity_settings10"
            android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow4"
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings11"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow5"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings12"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow6"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings13"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow7"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="@string/activity_settings14"
                android:padding="5dip" />
            <TextView
                android:text=""
                android:gravity=""
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dip"
                android:id="@+id/settingsTableRow8"
                android:layout_height="wrap_content"
                />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/settingsButtonChangeKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_border_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/_textViewBigstyle"
        android:text="@string/activity_settings16"
        />

    <EditText
        android:layout_marginTop="10dp"

        android:id="@+id/settingsEditTextIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/settingsButtonChangeIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings17"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>

    </ScrollView>/
    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />


</android.support.v4.widget.DrawerLayout>