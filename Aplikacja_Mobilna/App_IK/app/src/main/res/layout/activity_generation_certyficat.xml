<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- The main content view -->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Generowanie Certyfikatu"
                       style="@style/_textViewBigstyle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Dane użytkownika"
                        style="@style/_textViewMediumstyle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Imie"
                        style="@style/_textViewMediumstyle"
                        />

                    <EditText
                        android:id="@+id/generationCertificateEditTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"

                        style="@style/_editTextStyle"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Nazwisko"
                        style="@style/_textViewMediumstyle"/>

                    <EditText
                        android:id="@+id/generationCertificateEditTextSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:layout_marginTop="5dp"
                        style="@style/_editTextStyle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_border_list" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"

                            android:text="Wybór użytkownika"
                            style="@style/_textViewMediumstyle"/>

                        <Spinner
                            android:id="@+id/generationCertyficatspinnerUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                             />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_border_list" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:text="Wybór zamka:"
                            style="@style/_textViewMediumstyle"/>

                        <Spinner
                            android:id="@+id/generationCertificateSpinnerLoks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_border_list" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"

                        >
                        <TextView
                            android:id="@+id/generationCertificateTextViewErrorIco"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="@string/activity_register_text7"
                            android:visibility="invisible"
                            style="@style/_textViewErrorStyle"
                            />


                        <TextView
                            android:id="@+id/generationCertificateTextViewErrorText"
                            style="@style/_textViewErrorStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="@string/activity_register_text8"
                            android:visibility="invisible"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Czas ważności certyfikatu"
                        style="@style/_textViewMediumstyle"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Od:"
                        style="@style/_textViewMediumstyle"/>

                    <EditText
                        android:id="@+id/generationCertificateEditTextFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:layout_marginTop="5dp"
                        style="@style/_editTextStyle"
                        android:clickable="true"
                        android:focusable="true"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:text="Do:"
                        style="@style/_textViewMediumstyle"/>

                    <EditText
                        android:id="@+id/generationCertificateEditTextTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"

                        style="@style/_editTextStyle"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_border_list" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:gravity="center"
                    >

                <Button
                        android:id="@+id/generationCertyficatButtonRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Zakres obowiązywania certyfikatu" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/color_border_list" />

                    <Button
                        android:id="@+id/generationCertificateButtonSend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Wygeneruj certyfikat" />
                </LinearLayout>
                </LinearLayout>


            </ScrollView>






    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />


</android.support.v4.widget.DrawerLayout>