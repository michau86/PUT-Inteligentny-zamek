<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/_textViewBigstyle"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/activity_managmentCertyfication5"

        android:paddingStart="20dp"

        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_list" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_list"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/managmentCertificationLinearLayoutDownloadFile"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/managmentCertificationLinearLayoutDownloadSerwer"
            >
        <TextView
            android:id="@+id/managmentCertificationTextViewDownloadSerwer"
            style="@style/_textViewListStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="20dp"
            android:text="@string/icon_download_serwer"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:text="@string/activity_managmentCertyfication8"
            style="@style/_textViewListStyle"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_list" />




        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_list" />

    <TextView
        android:id="@+id/managmentCertificationTextViewList"
        android:background="@color/color_background_list"
        style="@style/_textViewListStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:text="@string/activity_managmentCertyfication2"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_list" />


    <TextView
        android:id="@+id/managmentCertificationTextViewExtend"
        android:background="@color/color_background_list"
        style="@style/_textViewListStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:text="@string/activity_managmentCertyfication3"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_border_list" />


</LinearLayout>

    </ScrollView>

    <!-- The navigation drawer -->


    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />


    </android.support.v4.widget.DrawerLayout>