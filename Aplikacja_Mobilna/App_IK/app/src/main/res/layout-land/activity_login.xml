<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inteligenty_zamek.app_ik.Views.LoginActivity">


    <TextView
        android:id="@+id/errorlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niepoprawny login lub hasÅ‚o"
        android:visibility="invisible"
        android:layout_above="@+id/EditText_login"
        android:layout_toEndOf="@+id/warning_icologin"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/warning_icologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xf071;"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/TextView_Login"
        android:layout_alignBottom="@+id/TextView_Login"
        android:layout_toEndOf="@+id/TextView_password"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/TextView_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="22dp"
        android:text="@string/activity_login_text1" />

    <EditText
        android:id="@+id/EditText_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/color_background_input"
        android:layout_below="@+id/TextView_Login"
        android:layout_alignStart="@+id/TextView_Login"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/TextView_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText_login"
        android:layout_alignStart="@+id/EditText_login"
        android:layout_below="@+id/EditText_login"
        android:layout_marginTop="16dp"
        android:text="@string/activity_login_text2" />

    <EditText
        android:id="@+id/EditText_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_password"
        android:layout_alignStart="@+id/TextView_password"
        android:layout_below="@+id/TextView_password"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text3"
        android:layout_below="@+id/EditText_password"
        android:layout_alignLeft="@+id/EditText_password"
        android:layout_alignStart="@+id/EditText_password"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="18dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/activity_login_text4"
        android:layout_alignBaseline="@+id/errorlogin"
        android:layout_alignBottom="@+id/errorlogin"
        android:layout_toEndOf="@+id/errorlogin" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_text5"
        android:layout_alignBottom="@+id/EditText_password"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_register"
        android:layout_alignBottom="@+id/button_register"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/button_register"
        android:layout_toRightOf="@+id/button_register"
        android:text="@string/activity_login_text6" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_login"
        android:layout_alignStart="@+id/button_register"
        android:text="Adres serwera" />

    <EditText
        android:id="@+id/iptextview"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView37"
        android:layout_below="@+id/textView37"
        android:background="@color/color_background_input"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>
